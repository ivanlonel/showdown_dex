# https://editorconfig.org/

root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = tab
insert_final_newline = true
trim_trailing_whitespace = true

[*.py]
indent_style = space
# max_line_length = 119

[*.{html,xml,json,yaml,yml}]
indent_size = 2
indent_style = space

[*.{md,csv}]
trim_trailing_whitespace = false

[*.tsv]
indent_size = 8
trim_trailing_whitespace = false

[*.{bat,cmd}]
end_of_line = crlf
